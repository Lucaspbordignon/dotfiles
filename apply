#!/bin/sh

configure_vim()
{
    ln -f .vimrc ~/
    curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
        https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
    git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
    ~/.fzf/install
    vim +PlugInstall +qall
}

configure_scmbreeze()
{
   git clone git://github.com/scmbreeze/scm_breeze.git ~/.scm_breeze
  ~/.scm_breeze/install.sh
  source ~/.zshrc
}

mkdir -p ~/.config/i3
mkdir -p ~/.config/polybar
mkdir -p ~/.config/termite
mkdir -p ~/Pictures

ln -f .zshrc ~/
configure_vim
configure_scmbreeze
ln -f config/i3/config ~/.config/i3/
ln -f config/polybar/config ~/.config/polybar/
ln -f config/polybar/redshift.sh ~/.config/polybar/
ln -f config/polybar/spotify.sh ~/.config/polybar/
ln -f config/termite/config ~/.config/termite/
cp media/geometry.png ~/Pictures/
cp media/nasa.tif ~/Pictures/
git clone git://github.com/zsh-users/zsh-autosuggestions ~/.zsh/zsh-autosuggestions
